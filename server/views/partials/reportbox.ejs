<div class="col-md-6 col-lg-4 mb-4">
    <div class="card report-card h-100">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= report.project_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= report.created_at %></h6>

        <div class="mt-auto d-flex justify-content-between pt-3">
            <a href="/reports/<%= report.id %>" class="btn btn-outline-primary">View Report</a>

            <form action="/api/deleteRecord" method="POST" onsubmit="return confirm('Are you sure you want to delete this report? This action cannot be undone.');">

                <input type="hidden" name="id" value="<%= report.id %>">

                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

</div>